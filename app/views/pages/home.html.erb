<div id="slider">
  <input id="slider-element" type="range" value="1" min="1" max="4" class="slider" />
</div>
<div class="container">
  <div class="row">
    <div class="span12">
      <ul id="countries">
        <% @countries.each do |country| %>
        <li class="country classification_<%= country.classification %>">
          <div class="row">
            <div class="image span3">
              <%= image_tag 'http://placehold.it/250x150' %>
              <%= link_to 'Boek Die Trip!', country_path(country), { :class => 'btn btn-large btn-warning' } %>
            </div>
            <div class="span9">
              <h2><%= country.title %></h2>
              <div class="info">
                <p><%= truncate(strip_tags(country.report.algemeen), length: 250) %>
              </div>
              <ul class="stats row">
                <li class="span3 price"></li>
                <li class="span3 temp">
                  ?
                </li>
                <li class="span3 prison"></li>
              </ul>
            </div>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

